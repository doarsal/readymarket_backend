# OTP Verification Configuration
# ==============================

# Enable/disable OTP verification for user registration
# When disabled, users are auto-verified during registration
OTP_VERIFICATION_ENABLED=true

# OTP code settings
OTP_CODE_LENGTH=6
OTP_EXPIRATION_MINUTES=10
OTP_RESEND_RATE_LIMIT_SECONDS=60

# OTP delivery channels
OTP_EMAIL_ENABLED=true
OTP_WHATSAPP_ENABLED=true

# Auto-verify users when OTP is disabled
OTP_AUTO_VERIFY_WHEN_DISABLED=true
