<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <!-- Preflight OPTIONS: responder con headers CORS -->
                <rule name="Preflight OPTIONS" stopProcessing="true">
                    <match url=".*" />
                    <conditions>
                        <add input="{REQUEST_METHOD}" pattern="OPTIONS" />
                    </conditions>
                    <action type="CustomResponse" statusCode="200" statusReason="OK" statusDescription="Preflight OK" />
                    <serverVariables>
                        <set name="RESPONSE_Access-Control-Allow-Origin" value="https://readymarket.readymind.mx" />
                        <set name="RESPONSE_Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS, PATCH" />
                        <set name="RESPONSE_Access-Control-Allow-Headers" value="X-Cart-Token, Content-Type, Accept, Authorization, X-Requested-With, X-XSRF-TOKEN" />
                        <set name="RESPONSE_Access-Control-Allow-Credentials" value="true" />
                        <set name="RESPONSE_Access-Control-Max-Age" value="86400" />
                    </serverVariables>
                </rule>

                <!-- Handle Authorization Header -->
                <rule name="Handle Authorization Header">
                    <match url=".*" ignoreCase="false" />
                    <conditions>
                        <add input="{HTTP_AUTHORIZATION}" pattern=".+" ignoreCase="false" />
                    </conditions>
                    <action type="None" />
                    <serverVariables>
                        <set name="HTTP_AUTHORIZATION" value="{HTTP_AUTHORIZATION}" />
                    </serverVariables>
                </rule>

                <!-- Handle X-XSRF-Token Header -->
                <rule name="Handle X-XSRF-Token Header">
                    <match url=".*" ignoreCase="false" />
                    <conditions>
                        <add input="{HTTP_X_XSRF_TOKEN}" pattern=".+" ignoreCase="false" />
                    </conditions>
                    <action type="None" />
                    <serverVariables>
                        <set name="HTTP_X_XSRF_TOKEN" value="{HTTP_X_XSRF_TOKEN}" />
                    </serverVariables>
                </rule>

                <!-- Redirect Trailing Slashes If Not A Folder -->
                <rule name="Redirect Trailing Slashes" stopProcessing="true">
                    <match url="^(.+)/$" ignoreCase="false" />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" ignoreCase="false" negate="true" />
                    </conditions>
                    <action type="Redirect" redirectType="Permanent" url="{R:1}" />
                </rule>

                <!-- Send Requests To Front Controller -->
                <rule name="Send Requests To Front Controller" stopProcessing="true">
                    <match url="^.*$" ignoreCase="false" />
                    <conditions logicalGrouping="MatchAll">
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" ignoreCase="false" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" ignoreCase="false" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="index.php" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
